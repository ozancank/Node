html(lang='tr')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(
      rel='stylesheet',
      href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css'
    )
    link(
      rel='stylesheet',
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css'
    )
    link(rel='stylesheet' href='/css/style.css')
    title Add Product

  body
    nav.navbar.navbar-expand-sm.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href='/') Shopping
        u.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href='') Login
          li.nav-item
            a.nav-link(href='') Register

    .container.pt-100
      .row
        .col-3
          .list-group
            a.list-group-item(href='') Category 1
            a.list-group-item(href='') Category 2
            a.list-group-item(href='') Category 3

        .col-9
          form(action='add-product' method='POST')
            .form-group.row.mb-3
              label.col-sm-2.form-label(for='ProductName') Name
              .col-sm-10
                input#productName.form-control(type='text' name='productName')

            .form-group.row.mb-3
              .col-sm-10.offset-sm-2
                button.btn.btn-primary(type='submit') Save Product

  script(
    src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js'
  )
