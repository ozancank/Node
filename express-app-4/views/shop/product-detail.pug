extends ../layouts/main-layout.pug

block content
    .row
        .col-3
            img(src=`${product.imageUrl}` alt=`${product.description}`).img-fluid
        .col-9.ps-3   
            h1.mb-3 #{product.name}
            hr
            a.btn.btn-link.p-0.mb-3(href="") #{category.name}
            .mb-3 
                h4.text-primary.mb-3 #{product.price} TL
                button(type="submit").btn.btn-primary.btn-lg Add to Cart
    .row   
        .col-12
            hr
            p.p-3 #{product.description}