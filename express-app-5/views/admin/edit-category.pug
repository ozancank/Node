extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/forms.css")

block content
  form(action='/admin/edit-category' method='POST')
    input(type="hidden" name="_csrf" value=`${csrfToken}`)
    input(type="hidden" name="id" value=`${category._id}`)
    .form-group.row.mb-3
      label.col-sm-2.form-label(for='name') Category Name
      .col-sm-10
        input#name.form-control(type='text' name='name' value=`${category.name}`)       
    .form-group.row.mb-3
      label.col-sm-2.form-label(for='description') Description
      .col-sm-10
        textarea#description.form-control(name='description' cols="30" rows="10") #{category.description}
    .form-group.row.mb-3
      .col-sm-10.offset-sm-2
        button.btn.btn-primary(type='submit') Save Category