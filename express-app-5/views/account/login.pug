extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    if errorMessage 
        .alert.alert-danger.col-sm-12 #{errorMessage}
    form(action='/login' method='POST')
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row.mb-3
            label.col-sm-2.form-label(for='email') Email
            .col-sm-5
                input#email.form-control(type='text' name='email')
        .form-group.row.mb-3
            label.col-sm-2.form-label(for='password') Password
            .col-sm-5
                input#password.form-control(type='password' name='password')
        .form-group.row.mb-3
            .col-sm-5.offset-sm-2
                button.btn.btn-primary(type='submit') Login
        .form-group.row.mb-3
            .col-sm-5.offset-sm-2
                a.btn.btn-link.p-0(href='/reset-password') Reset Password